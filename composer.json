{
    "name": "frame-php/installer",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP installer",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "require-dev": {
    },
    "require": {
        "frame-php/application": "dev-master"
    },
    "scripts": {
        "post-create-project-cmd": [ 
            "mv ./vendor/frame-php/application/ ./",
            "mv ./vendor/frame-php/module-sys/ ./sys",
            "mv ./vendor/frame-php/module-app/ ./app/site", 
            "composer update"
        ],
        "post-install-cmd": [
            "@post-create-project-cmd"
        ],
        "post-update-cmd": [             
            "composer dumpautoload"
        ]
    },
    "minimum-stability": "dev"
}
