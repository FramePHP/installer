{
    "name": "frame-php/installer",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP installer",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "require-dev": {
    },
    "require": {
        "frame-php/application": "dev-master",
        "frame-php/module-app": "dev-master",
        "frame-php/module-sys": "dev-master"
    },
    "extra": {
        "installer-paths": {
           "./{$name}": [
               "frame-php/module-sys",
               "frame-php/module-app",
               "frame-php/application"
           ]
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"is_dir('./app/site') || mkdir('./app/site/', 0775, true);\"",
            "mv ./module-app/. ./app/site/",
            "mv ./module-sys/. ./sys/",
            "mv ./application/. .",
            "composer update"
        ],
        "pre-install-cmd": [
            "rm -rf vendor/frame-php/application/",
            "rm -rf vendor/frame-php/module-sys/",
            "rm -rf vendor/frame-php/module-app/"
        ],
        "post-install-cmd": [
            "@post-create-project-cmd"
        ],
        "post-update-cmd": [
            "rm -rf vendor/frame-php/application/*",
            "rm -rf vendor/frame-php/module-sys/*",
            "rm -rf vendor/frame-php/module-app/*",
            "composer dumpautoload"
        ]
    },
    "minimum-stability": "dev"
}
