{
    "name": "frame-php/installer",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP system installer",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "frame-php/application": "dev-master"
    },
    "scripts":{
        "post-create-project-cmd":[
            "@php \"is_dir(data) || is_dir(public)\" || cp -r ./vendor/frame-php/application/{.,}* ./",
            "@php \"!is_dir(vendor/frame-php/application) || rm -rf ./vendor/frame-php/application",
            "@php composer update"
        ]
    }
}
