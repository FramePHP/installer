{
    "name": "frame-php/installer",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP installer",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "require-dev": {
    },
    "require": {
        "frame-php/application": "dev-master",
        "frame-php/module-app": "dev-master",
        "frame-php/module-sys": "dev-master"
    },
    "extra":{
        "installer-paths": {
            "./": [
                "frame-php/module-app",
                   "frame-php/module-sys",
                   "frame-php/application"
            ]
        }
    },
    "scripts": {
        "moveFiles": [
            "@php -r \"require_once 'Install.php'; Install::PostCreateCMD();\""
        ],
        "trashFiles" : [
            "@php composer dump-autoload -o"
        ],
        "post-create-project-cmd": [
            "@moveFiles", "@trashFiles"
        ],
        "post-install-cmd": [
            "@moveFiles", "@trashFiles"
        ],
        "post-update-cmd": [
            "@post-install-cmd"
        ]
    },
    "minimum-stability": "dev"
}
