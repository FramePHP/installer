{
    "name": "frame-php/installer",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP installer",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "require-dev": {
    },
    "require": {
        "frame-php/application": "dev-master"
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"require_once 'Command.php'; Command::CheckInstallCMD(true);\"", 
            "composer update"
        ],
        "post-install-cmd": [
            "@post-create-project-cmd"
        ],
        "post-update-cmd": [
            "@php -r \"require_once 'Command.php'; Command::CheckInstallCMD();\"", 
            "composer dumpautoload"
        ]
    },
    "minimum-stability": "dev"
}
