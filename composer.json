{
    "name": "frame-php/installer",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP installer",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "require-dev": {
    },
    "require": {
        "frame-php/application": "dev-master"
    },
    "scripts": {
        "movFiles": [
            "@php -r \"require_once 'Command.php'; Command::PostCreateCMD();\""
        ],
        "dltFiles": [
            "@php -r \"require_once 'Command.php'; Command::PostUpdateCMD();\""
        ],
        "loadFiles" : [
            "composer dump-autoload -o"
        ],
        "post-create-project-cmd": [
            "@movFiles", "composer update", "@dltFiles", "@loadFiles"
        ],
        "post-install-cmd": [
            "@movFiles", "@dltFiles", "@loadFiles"
        ],
        "post-update-cmd": [
            "@dltFiles", "@loadFiles"
        ]
    },
    "minimum-stability": "dev"
}
